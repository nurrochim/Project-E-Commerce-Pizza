<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3px"
    android:layout_marginLeft="3px"
    android:layout_marginRight="3px"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_status_order"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:id="@+id/layout_image_menu"
            android:gravity="center_vertical"
            android:paddingTop="1mm">
            <ImageView
                android:id="@+id/image_checklist"
                android:layout_width="8mm"
                android:layout_height="6mm"
                app:srcCompat="@drawable/check_mark"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_detail_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/layout_image_menu"
            android:layout_marginLeft="5px"
            android:layout_marginBottom="10px"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service AC"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/blacks"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            >
            <View style="@style/Divider"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>