<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5px"
    android:layout_marginLeft="5px"
    android:layout_marginRight="5px"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_profil_penyedia_jasa"
        android:background="@drawable/shape_radius_layout"
        android:padding="10px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:id="@+id/layout_image_menu">
            <ImageView
                android:id="@+id/image_cart_menu"
                android:layout_width="150px"
                android:layout_height="150px"
                app:srcCompat="@drawable/beef_rendang"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/layout_image_menu"
            android:layout_marginLeft="10px">
            <TextView
                android:id="@+id/text_pizza_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service AC"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/blacks"
                />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="2"
                >
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="14sp"
                        android:layout_marginLeft="5px"
                        android:layout_marginRight="5px"
                        />
                    <TextView
                        android:id="@+id/text_size_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 inchi"
                        android:textSize="14sp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="14sp"
                        android:layout_marginLeft="5px"
                        android:layout_marginRight="5px"
                        />
                    <TextView
                        android:id="@+id/text_qty_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="14sp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="14sp"
                        android:layout_marginLeft="5px"
                        android:layout_marginRight="5px"
                        />
                    <TextView
                        android:id="@+id/text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 150,000.00"
                        android:textSize="14sp"
                        />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>